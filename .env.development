# Development Environment Configuration
# Copy this to .env.local and fill in your actual values

# Database - Use PostgreSQL for development
# For local PostgreSQL: postgresql://user:password@localhost:5432/mindmap_dev
# For Supabase: get from your Supabase project settings
DATABASE_URL="postgresql://postgres:password@localhost:5432/mindmap_dev"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-secret-min-32-chars-use-openssl-rand-base64-32"

# Encryption for LLM API keys (must be 32 characters minimum)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="generate-encryption-key-min-32-chars"

# Redis (optional, for job queue and caching)
# REDIS_URL="redis://localhost:6379"

# Web search providers (optional, at least one required for websearch ingestion)
# Get API keys from: https://tavily.com, https://serpapi.com, or Azure Bing Search
# TAVILY_API_KEY="your-tavily-api-key"
# SERPAPI_API_KEY="your-serpapi-api-key"
# BING_SEARCH_API_KEY="your-bing-api-key"

# App Configuration
NEXT_PUBLIC_APP_NAME="MindMap Dev"

# CORS Configuration (optional, defaults to same origin)
# ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
