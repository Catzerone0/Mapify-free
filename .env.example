# MindMap Application - Environment Variables Template
# Copy this file to .env.local for local development and fill in your values
# For production, set these as environment variables in your deployment platform

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Local development: postgresql://user:password@localhost:5432/mindmap_dev
# Supabase: postgresql://user:password@db.xxxxx.supabase.co:5432/postgres
# For testing, use SQLite: file:./test.db
DATABASE_URL="postgresql://user:password@localhost:5432/mindmap_db"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Must match your application URL
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# Secret key for JWT signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
# IMPORTANT: Use different secrets for dev/staging/production!
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars-1234567890abcdef"

# =============================================================================
# ENCRYPTION
# =============================================================================
# Key for encrypting LLM API keys in database (minimum 32 characters)
# Generate with: openssl rand -base64 32
# CRITICAL: Keep this secret and backed up - changing it invalidates stored API keys!
ENCRYPTION_KEY="your-encryption-key-here-min-32-chars-1234567890"

# =============================================================================
# REDIS (Optional but recommended for production)
# =============================================================================
# Used for job queue and caching
# Local: redis://localhost:6379
# Upstash: redis://default:password@region.upstash.io:6379
# REDIS_URL="redis://localhost:6379"

# =============================================================================
# WEB SEARCH PROVIDERS (Optional)
# =============================================================================
# At least one required for web search ingestion feature
# Sign up at: https://tavily.com, https://serpapi.com, or Azure Bing Search
# TAVILY_API_KEY="your-tavily-api-key"
# SERPAPI_API_KEY="your-serpapi-api-key"
# BING_SEARCH_API_KEY="your-bing-api-key"

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# Application name displayed in UI
NEXT_PUBLIC_APP_NAME="MindMap"

# =============================================================================
# CORS (Optional)
# =============================================================================
# Comma-separated list of allowed origins for API requests
# Only needed if frontend is on different domain than API
# ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# =============================================================================
# ENVIRONMENT-SPECIFIC NOTES
# =============================================================================
# Development: Use .env.local (not committed to git)
# Testing: Use .env.test (SQLite for fast tests)
# Staging: Set env vars in deployment platform
# Production: Set env vars in deployment platform (never commit production secrets!)
#
# Required variables: DATABASE_URL, NEXTAUTH_SECRET, ENCRYPTION_KEY
# Optional variables: REDIS_URL, search provider keys, ALLOWED_ORIGINS
